
{{#each coins}}
<li class="coin-row opacity-0 mobileEl" data-coin-name="{{name}}" 
    data-coin-symbol="{{symbol}}">
  <a href="/{{id}}" data-coin-id="{{id}}">
    <div class="box-shadow p-3 flex flex-col gap-3">
      <div class="flex items-center gap-3 ">
        <span class=" text-sm">#{{market_cap_rank}}</span>
        <img src="{{image}}" alt="{{id}}" class="w-7 h-7 sm:w-10 sm:h-10 rounded-full">
        <div class="flex-1 ">
          <div class="text-glow truncate max-w-[100px]">{{shortCoinName name}}</div>
          <span>{{symbol}}</span>
        </div>
        <div class="flex items-center gap-1 {{changeColor price_change_percentage_24h}}">
          <i data-lucide="{{trendIcon price_change_percentage_24h}}" class="w-3 h-3 sm:w-4 sm:h-4"></i>
          <span>{{percent price_change_percentage_24h}}</span>
        </div>
      </div>
      <div class="flex justify-between items-center gap-3 text-sm">
        <div class="flex flex-col gap-1">
          <div>Price</div>
          <div class="text-glow">{{bigNumber current_price}}</div>
        </div>
        <div class="flex flex-col gap-1">
          <div>Market Cap</div>
          <div class="text-glow">{{bigNumber market_cap}}</div>
        </div>
        <div class="flex flex-col gap-1">
          <div>Volume (24h)</div>
          <div class="text-glow">{{bigNumber total_volume}}</div>
        </div>
      </div>
    </div>
  </a>
</li>
{{/each}}
